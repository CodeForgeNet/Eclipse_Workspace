	public static void sortArr(int[] arr, int n) {
		for(int i=0; i<i-1; i++) {
			int mini=i;
			for(int j=i+1; j<n; j++) {
				if(arr[j]<arr[mini]) {
					mini=arr[j];
				}
			}
