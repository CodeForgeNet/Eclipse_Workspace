package classAssign.studentTask;

public class Stud3 {
	
	String name;
	long mobno;
	int id;
	ScoreCardM stud3ScoreCard;
	
	public Stud3(String name, long mobno, int id, ScoreCardM stuScoreCard) {
		this.name=name;
		this.mobno=mobno;
		this.id=id;
		this.stud3ScoreCard=stuScoreCard;
	}
	
	public void displayStud() {
		System.out.println("\n\n⚙️Student Details:- ");
		System.out.println("️Student Name :- " +name);
		System.out.println("Student Contact :- "+mobno);
		System.out.println("Student Age :- "+id);
		stud3ScoreCard.displayScoreM();
	}

}
